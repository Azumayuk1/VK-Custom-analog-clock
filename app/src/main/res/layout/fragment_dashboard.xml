<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <ru.mirea.vkcustomclock.ui.customviews.CustomAnalogClock
        android:id="@+id/customAnalogClock"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:clockPadding="50"/>

    <ru.mirea.vkcustomclock.ui.customviews.CustomAnalogClock
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="@+id/customAnalogClock"
        app:layout_constraintTop_toBottomOf="@+id/customAnalogClock"
        app:colorCircle="@color/teal_700"/>

</androidx.constraintlayout.widget.ConstraintLayout>